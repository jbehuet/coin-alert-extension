{
  "name": "CoinAlert",
  "version": "0.2",
  "description": "Coin alert extension",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "options_ui": {
    "page": "views/options.html"
  },
  "background": {
    "scripts": [
      "assets/js/utils/transport.js",
      "assets/js/background.js"
    ]
  },
  "action": {
    "default_popup": "views/popup.html",
    "default_icon": {
      "16": "assets/images/coin16.png",
      "32": "assets/images/coin32.png",
      "48": "assets/images/coin48.png",
      "128": "assets/images/coin128.png"
    }
  },
  "icons": {
    "16": "assets/images/coin16.png",
    "32": "assets/images/coin32.png",
    "48": "assets/images/coin48.png",
    "128": "assets/images/coin128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "jbehuet@gmail.com"
    }
  }
}