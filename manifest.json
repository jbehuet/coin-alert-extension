{
  "name": "CoinAlert",
  "version": "1.0",
  "description": "Coin alert extension",
  "permissions": ["declarativeContent", "storage"],
  "options_page": "options.html",
  "background": {
    "scripts": ["assets/js/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/images/coin16.png",
      "32": "assets/images/coin32.png",
      "48": "assets/images/coin48.png",
      "128": "assets/images/coin128.png"
    }
  },
  "icons": {
    "16": "assets/images/coin16.png",
    "32": "assets/images/coin32.png",
    "48": "assets/images/coin48.png",
    "128": "assets/images/coin128.png"
  },
  "manifest_version": 2
}
