{
  "name": "CoinAlert",
  "version": "0.1",
  "description": "Coin alert extension",
  "manifest_version": 2,
  "permissions": [
    "storage"
  ],
  "background": {
    "scripts": [
      "assets/js/background.js"
    ]
  },
  "browser_action": {
    "default_popup": "views/popup.html",
    "browser_style": true,
    "default_icon": {
      "16": "assets/images/coin16.png",
      "32": "assets/images/coin32.png",
      "48": "assets/images/coin48.png",
      "128": "assets/images/coin128.png"
    }
  },
  "icons": {
    "16": "assets/images/coin16.png",
    "32": "assets/images/coin32.png",
    "48": "assets/images/coin48.png",
    "128": "assets/images/coin128.png"
  },
  "applications": {
    "gecko": {
      "id": "jbehuet@gmail.com",
      "strict_min_version": "53.0"
    }
  }
}